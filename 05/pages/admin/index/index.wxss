.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin: 0;
}

.links {
  margin-bottom: 0;
}

.link {
  display: flex;
  align-items: center;
  height: 110rpx;
  border-bottom: 1px solid #ddd;
}

.link:first-child {
  border-top: 1px solid #ddd;
}

.link-text {
  font-size: 34rpx;
  flex-grow: 1;
  padding-left: 20rpx;
}

.link-icon{
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  padding: 36rpx;
}
