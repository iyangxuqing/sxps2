.navs {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  font-size: 32rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.nav {
  flex-basis: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  margin: -2rpx 20rpx 0;
}

.nav.active {
  color: red;
  border-bottom: 4rpx solid red;
}

.trades {
  margin-top: 90rpx;
  padding: 40rpx 30rpx;
}

.trade {
  font-size: 30rpx;
  margin-bottom: 40rpx;
}

.trade:last-child {
  margin-bottom: 0;
}

.trade-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #f0f0f0;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.trade-id {
  margin-bottom: 20rpx;
}

.trade-time {
  font-size: 26rpx;
  color: #666;
}

.trade-amount {
  margin-bottom: 20rpx;
}

.trade-num {
  font-size: 26rpx;
  color: #666;
}

.trade-status {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.trade-operate {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.trade-order {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1px solid #ddd;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #eee;
}

.product-text {
  margin-left: 20rpx;
  flex-grow: 1;
}

.product-title {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}

.product-descs {
  font-size: 26rpx;
  color: #888;
}

.product-number {
  width: 160rpx;
}

.product-amount {
  margin-bottom: 10rpx;
}

.product-num {
  font-size: 26rpx;
  color: #888;
}

.trades-empty{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-top: 400rpx;
}

.empty-line{
  width: 100rpx;
  height: 1px;
  background-color: #ccc;
}

.empty-text{
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}