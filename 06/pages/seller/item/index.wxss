@import '/template/toptip/toptip.wxss';
@import '/template/swiperImagesEditor/swiperImagesEditor.wxss';

page {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #f0f0f0;
}

.section {
  margin-bottom: 20rpx;
}

.item-cates {
  display: flex;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
  margin-bottom: 0;
}

.item-cates picker {
  flex-grow: 1;
}

.item-cates-editor {
  flex-shrink: 0;
  color: #888;
  padding: 20rpx;
  margin-top: -10rpx;
  margin-right: -20rpx;
}

.item-images {
  height: 440rpx;
  border: 1px solid #ddd;
  background-color: #fff;
}

.fields {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #fff;
}

.field {
  display: flex;
  align-items: center;
  height: 90rpx;
}

.field + .field {
  border-top: 1px solid #ddd;
}

.field .label {
  flex-shrink: 0;
  width: 160rpx;
}

.field .input {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.field .mark {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  width: 60rpx;
  color: #888;
}

.buttons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 72rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  border: 1px solid #ccc;
}

.button.disabled {
  opacity: 0.5;
}

.button-primary {
  color: #fff;
  background-color: #1aac19;
}

.button-warn {
  color: #fff;
  background-color: #e64240;
}
