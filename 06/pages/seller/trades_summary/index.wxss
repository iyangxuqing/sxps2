@import '/template/datetimes/datetimes.wxss'; 

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.item.item-summary {
  padding-left: 0;
}

.item {
  position: relative;
  display: flex;
  align-items: center;
  color: #666;
  padding: 20rpx;
  border-bottom: 2rpx solid #ddd;
}

.item.item-head {
  background-color: #f0f0f0;
  border-bottom: 0 solid #ddd;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
}

.item-text {
  flex-grow: 1;
  margin-left: 20rpx;
}

.item-title {
  font-size: 34rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.item-descs {
  font-size: 26rpx;
}

.item-num {
  text-align: right;
  padding-right: 30rpx;
}

.item-realNum {
  position: absolute;
  top: 36rpx;
  right: 100rpx;
  font-size: 30rpx;
  color: #f00;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 70rpx;
  transform: rotate(10deg);
  border: 4rpx solid #f00;
}

.empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-top: 400rpx;
}

.empty-line {
  width: 100rpx;
  height: 1px;
  background-color: #ccc;
}

.empty-text {
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}
