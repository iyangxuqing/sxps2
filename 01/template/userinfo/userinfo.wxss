.userInfo {
  position: relative;
  width: 100%;
  height: 200rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.userInfo button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: transparent;
}

.userInfo button::after {
  display: none;
}

.userInfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  top: 36%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
  border: 1px solid #ddd;
}

.userInfo-nickName {
  position: absolute;
  top: 80%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
}