.popup {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9999;
  width: 100%;
}

.popup.popup-show {
  display: block;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(10, 10, 10, 0.5);
}

.popup-body {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 0;
  transition: all 300ms ease;
  background-color: #fff;
}

.popup-show .popup-body {
  height: 430rpx;
}

.popup-close {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}

.distribute {
  font-size: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}

.distribute-info {
  display: flex;
}

.distribute-image {
  width: 280rpx;
  height: 280rpx;
  border: 1px solid #ddd;
}

.distribute-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 280rpx;
  margin-left: 30rpx;
}

.distribute-text {
  flex-grow: 1;
  margin-left: 30rpx;
}

.distribute-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 50rpx;
}

.distribute-descs {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #888;
}

.distribute-row {
  display: flex;
  align-items: center;
}

.distribute-price {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #333;
}

.distribute-num {
  color: #333;
  margin-left: 60rpx;
}

.distribute-number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  margin-top: 10rpx;
}

.distribute-minus, .distribute-plus {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  flex-shrink: 0;
}

.distribute-minus {
  margin-left: -10rpx;
}

.distribute-plus {
  margin-right: -10rpx;
}

.minus-inner, .plus-inner {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.distribute-input {
  width: 200rpx;
}

.distribute-input input {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}

.distribute-buttons {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 110rpx;
}

.distribute-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 70rpx;
  color: #fff;
  border-radius: 10rpx;
  background-color: #f00;
}
