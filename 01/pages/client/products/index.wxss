.container {
  position: relative;
  width: 100%;
  height: 100%;
}

.topbar {
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
}

.search-bar {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: #f0f0f0;
}

.search-input {
  display: flex;
  align-items: center;
  flex-grow: 1;
  height: 60rpx;
  font-size: 28rpx;
  padding-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  background-color: #fff;
}

.search-button {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  width: 140rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.search-icon {
  width: 90rpx;
  height: 90rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.leftnav {
  position: fixed;
  z-index: 1;
  top: 90rpx;
  left: 0;
  width: 160rpx;
  height: calc(100% - 90rpx);
  background-color: #f0f0f0;
}

.content {
  position: relative;
  margin-top: 90rpx;
  margin-left: 160rpx;
}

.products {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.product {
  position: relative;
  flex-wrap: wrap;
  width: 170rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #333;
  margin-bottom: 20rpx;
}

.product:nth-child(3n+2) {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.product-image {
  width: 170rpx;
  height: 170rpx;
  border: 1px solid #eee;
}

.product-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 10rpx;
}

.product-num {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  color: #fff;
  font-size: 24rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  padding: 0 4rpx;
  border-radius: 50%;
  background-color: #f00;
}

.popup {
  position: fixed;
  z-index: 9999;
  width: 100%;
  bottom: 0;
}

.popup.popup-show {
  display: block;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(10, 10, 10, 0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 0;
  transition: all 300ms ease;
}

.popup-content-close {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}

.popup-show .popup-content {
  height: 430rpx;
}

.shopping {
  font-size: 30rpx;
  padding: 30rpx;
  background-color: #fff;
}

.shopping-info {
  display: flex;
}

.shopping-image {
  width: 280rpx;
  height: 280rpx;
  border: 1px solid #ddd;
}

.shopping-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 280rpx;
  margin-left: 30rpx;
}

.shopping-text {
  flex-grow: 1;
  margin-left: 30rpx;
}

.shopping-title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.shopping-descs {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #888;
}

.shopping-price {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: red;
}

.shopping-number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
}

.minus, .plus {
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  flex-shrink: 0;
}

.minus {
  margin-left: -10rpx;
}

.plus {
  margin-right: -10rpx;
}

.minus-inner, .plus-inner {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.number {
  width: 200rpx;
}

.number input {
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
}

.shopping-foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  margin-top: 20rpx;
}

.shopping-amount {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
}

.shopping-amount-value {
  color: red;
}

.shopping-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  width: 260rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: orange;
}

.products-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-top: 300rpx;
}

.empty-line {
  width: 100rpx;
  height: 1px;
  background-color: #ccc;
}

.empty-text {
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}

.cates {
  font-size: 30rpx;
}

.cate {
  border-bottom: 1px solid #ccc;
}

.cate-title {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
}

.cate-children {
  height: 0;
  transition: all 300ms ease;
  overflow: hidden;
}

.cate-child {
  display: flex;
  align-items: center;
  min-height: 80rpx;
  padding-left: 30rpx;
  padding-right: 10rpx;
  background-color: #fff;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.cate-child:last-child {
  border-bottom: 0;
}

.cate-child.active {
  color: red;
}

.cate.active .cate-title {
  color: #fff;
  background-color: #538ed5;
}

.cate.active .cate-children {
  height: auto;
}
