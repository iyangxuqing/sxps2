page {
  box-sizing: border-box;
}

.container {
  position: fixed;
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}

.topbar {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: 1px solid #ddd;
}

.navs {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.nav {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  min-width: 100rpx;
  height: 100%;
  padding: 0 20rpx;
}

.nav.active {
  color: blue;
}

.content {
  display: flex;
  height: calc(100% - 100rpx);
  border-bottom: 1px solid #ddd;
}

.content-left {
  width: 180rpx;
  height: 100%;
  flex-shrink: 0;
  overflow: hidden;
  overflow-y: auto;
  border-right: 1px solid #ddd;
  -webkit-overflow-scrolling: touch;
}

.content-right {
  height: 100%;
  flex-grow: 1;
  overflow: hidden;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.cate2 {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cate2.active {
  color: #fff;
  background-color: #538ed5;
}

.products {
  padding-left: 20rpx;
}

.product {
  display: flex;
  align-items: center;
  height: 180rpx;
}

.product + .product {
  border-top: 1px solid #ddd;
}

.product .image {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.product .text {
  flex-grow: 1;
  padding-left: 10rpx;
}

.product .name {
  font-size: 30rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product .pnum {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx;
}

.product .price {
  font-size: 30rpx;
}

.product .number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 200rpx;
}

.product .minus, .product .plus{
  width: 80rpx;
  height: 100rpx;
  padding: 40rpx 30rpx;
}

.product .num{
  width:40rpx;
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
}

.product .desc {
  font-size: 28rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
