@import '/template/loading/loading.wxss';
@import '/template/toptip/toptip.wxss';
@import '/template/userinfo/userinfo.wxss';
@import '/template/mobile/mobile.wxss';

page {
  background-color: #f2f2f2;
}

.coupons {
  padding: 30rpx;
}

.coupon {
  display: flex;
  width: 100%;
  height: 204rpx;
  border: 2rpx solid #ddd;
}

.coupon + .coupon {
  margin-top: 30rpx;
}

.coupon-left {
  width: 200rpx;
  height: 100%;
  flex-shrink: 0;
  background-color: rgba(92, 176, 226, 0.30);
}

.coupon-right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex-grow: 1;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
}

.coupon-image {
  width: 100%;
  height: 100%;
  padding: 10rpx;
}

.coupon-title {
  height: 76rpx;
  line-height: 76rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.coupon-descs {
  flex-grow: 1;
  font-size: 0.9em;
  display: flex;
  align-items: center;
}

.coupon-notes {
  height: 56rpx;
  line-height: 56rpx;
  flex-shrink: 0;
  font-size: 0.8em;
  color: #888;
  white-space: nowrap;
  text-overflow: clip;
  overflow: hidden;
}
