.navs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  font-size: 32rpx;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.nav {
  flex-basis: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  margin: -2rpx 20rpx 0;
}

.nav.active {
  color: red;
  border-bottom: 4rpx solid red;
}

.trades {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
}

.trade {
  font-size: 30rpx;
  margin-top: 40rpx;
}

.trade-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #f2f2f2;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.trade-id {
  margin-bottom: 20rpx;
}

.trade-time {
  font-size: 26rpx;
  color: #666;
}

.trade-amount {
  margin-bottom: 20rpx;
}

.trade-num {
  font-size: 26rpx;
  color: #666;
}

.trade-status {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.trade-operate {
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.trade-order {
  display: flex;
  align-items: center;
  height: 140rpx;
  border-bottom: 1px solid #ddd;
}

.product-image {
  width: 120rpx;
  height: 120rpx;
}

.product-text {
  margin-left: 20rpx;
  flex-grow: 1;
}

.product-title {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 26rpx;
  color: #888;
}

.product-number {
  width: 160rpx;
}

.product-amount {
  margin-bottom: 10rpx;
}

.product-num {
  font-size: 26rpx;
  color: #888;
}
