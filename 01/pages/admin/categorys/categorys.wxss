.categorys {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 200rpx;
}

.category {
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ccc;
}

.category:first-child {
  border-top: 1px solid #ccc;
}

.category .title {
  flex-grow: 0;
  min-width: 200rpx;
  max-width: 400rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  white-space: nowrap;
  overflow: hidden;
}

.category-new .title {
  flex-grow: 1;
}

.icon.icon-left {
  width: 120rpx;
  height: 120rpx;
  padding: 36rpx;
  flex-shrink: 0;
  transform: rotate(90deg);
}

.icon.icon-left.expanded {
  transform: rotate(-90deg);
}

.icon.icon-right {
  flex-shrink: 0;
  flex-grow: 1;
  min-width: 120rpx;
  height: 120rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.icon.icon-right image {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.children .category {
  border-bottom: 1px dashed #ccc;
}

.children .category:first-child {
  border-top: 0;
}

.children .category:last-child {
  border-bottom: 1px solid #ccc;
}

.category-new {
  display: flex;
  align-items: center;
  color: #888;
}

.category-inner {
  display: flex;
  align-items: center;
  width: 1050rpx;
  height: 120rpx;
  transition: all 300ms ease;
}

.category-inner.swipeleft {
  transform: translateX(-360rpx);
}

.left {
  width: 672rpx;
  display: flex;
  align-items: center;
}

.right {
  width: 360rpx;
  display: flex;
  align-items: center;
}

.sort-up {
  width: 120rpx;
  height: 120rpx;
  padding: 40rpx;
  background-color: seagreen;
}

.sort-down {
  width: 120rpx;
  height: 120rpx;
  padding: 40rpx;
  background-color: orange;
}

.delete {
  width: 120rpx;
  height: 120rpx;
  padding: 40rpx;
  background-color: red;
}

.editor {
  position: absolute;
  top: 0;
  left: 0;
  width: 400rpx;
  background-color: #fff;
}

.editor.devtools {
  margin-top: -4rpx;
  margin-left: 0rpx;
}

.editor.ios {
  margin-top: -2rpx;
  margin-left: 0rpx;
}

.editor.android {
  margin-top: 0rpx;
  margin-left: 0rpx;
}
