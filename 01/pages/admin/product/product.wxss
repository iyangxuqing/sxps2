@import '/template/swiperImagesEditor/swiperImagesEditor.wxss';

.product{
  padding-top: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.product-title {
  text-align: center;
  background-color: #eee;
}

.product-images {
  width: 100%;
  height: 480rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ddd;
}

.product-title input {
  padding: 20rpx;
}

.head {
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  background-color: #eee;
}

.item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 20rpx;
  overflow: hidden;
  border-bottom: 1px solid #ddd;
}
