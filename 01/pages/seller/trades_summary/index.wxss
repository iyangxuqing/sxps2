@import '/template/datetimes/datetimes.wxss';
@import '/template/empty/empty.wxss';

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 140rpx;
}

.item {
  position: relative;
  display: flex;
  align-items: center;
  color: #666;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #ddd;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
}

.item-text {
  flex-grow: 1;
  margin-left: 20rpx;
}

.item-title {
  font-size: 34rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.item-descs {
  font-size: 26rpx;
}

.item-num {
  text-align: right;
  padding-right: 20rpx;
}

.item-num-value{
  display: inline-block;
  width: 100rpx;
}

.item-summary .item-num {
  font-size: 26rpx;
}

.item-summary .item-num + .item-num {
  margin-top: 4rpx;
}