@import '/template/swiperImagesEditor/swiperImagesEditor.wxss';

page {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #f0f0f0;
}

.section {
  margin-bottom: 20rpx;
}

.item-cates{
  display: flex;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
  margin-bottom: 0;
}

.item-cates picker{
  width: 100%;
}

.item-images {
  height: 440rpx;
  border: 1px solid #ddd;
  background-color: #fff;
}

.fields {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #fff;
}

.field {
  display: flex;
  align-items: center;
  height: 90rpx;
}

.field + .field {
  border-top: 1px solid #ddd;
}

.field .label {
  flex-shrink: 0;
  width: 160rpx;
}

.field .input {
  flex-grow: 1;
  display: flex;
  align-items: center;
}

.field .mark {
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  width: 60rpx;
  color: #888;
}
