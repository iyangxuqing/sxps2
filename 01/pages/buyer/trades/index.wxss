@import '/template/topnavs/topnavs.wxss';
@import '/template/empty/empty.wxss';

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.container.withTopnavs {
  padding-top: 90rpx;
}

.trades {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.trade {
  font-size: 30rpx;
  color: #333;
}

.gray {
  color: #888;
}

.trade + .trade {
  margin-top: 30rpx;
}

.trade-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 110rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #f0f0f0;
}

.trade-label.tid {
  font-size: 34rpx;
}

.trade-label + .trade-label {
  margin-top: 8rpx;
}

.order {
  display: flex;
  align-items: center;
  height: 160rpx;
}

.order + .order {
  border-top: 2rpx solid #ddd;
}

.order-image {
  flex-shrink: 0;
  width: 140rpx;
  height: 140rpx;
}

.order-text {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 400rpx;
  padding-left: 10rpx;
}

.order-text-title {
  font-size: 32rpx;
  font-weight: 400;
}

.order-text-descs {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.order-text-message {
  font-size: 24rpx;
  overflow: hidden;
  margin-top: 8rpx;
}

.order-number {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 140rpx;
  padding-right: 10rpx;
}

.order-number-price {
  margin-bottom: 8rpx;
}

.trade-counts {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  height: 90rpx;
  font-size: 24rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #f0f0f0;
}

.trade-count {
  display: flex;
  align-items: center;
}

.trade-count-col {
  width: 200rpx;
  text-align: right;
}
