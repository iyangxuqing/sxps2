.container {
  padding-top: 276rpx;
}

.cates {
  position: fixed;
  top: 0;
  z-index: 1;
  width: 100%;
  background-color: #fff;
}

.level1Cates {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
  overflow: hidden;
  overflow-x: auto;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.level1Cate {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  height: 90rpx;
  font-size: 32rpx;
  padding-right: 30rpx;
  margin-bottom: 2rpx;
  border-bottom: 4rpx solid transparent;
}

.level1Cate.active {
  color: red;
}

.level2Cates {
  display: flex;
  flex-wrap: wrap;
  height: 180rpx;
  overflow: hidden;
  padding: 20rpx 30rpx; 
  border-bottom: 1px solid #ddd;
}

.level2Cate {
  display: flex;
  align-items: center;
  height: 70rpx;
  font-size: 28rpx;
  color: #888;
  padding-right: 30rpx;
}

.level2Cate.active {
  color: red;
}

.items {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
}

.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 210rpx;
  margin-bottom: 20rpx;
}

.item:nth-of-type(3n+2) {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.item-image {
  width: 210rpx;
  height: 210rpx;
  border: 1px solid #eee;
  margin-bottom: 10rpx;
}

.item-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 6rpx;
}

.item-price {
  font-size: 28rpx;
  color: red;
}

.empty {
  position: absolute;
  top: 50%;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
}

.empty-line {
  width: 100rpx;
  height: 1px;
  background-color: #ccc;
}

.empty-text {
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}
