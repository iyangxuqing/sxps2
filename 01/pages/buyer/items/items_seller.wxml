<view class="container">
  <view class="shops">
    <block wx:for="{{shops}}" wx:key="" wx:for-item="shop">
      <view class="shop">
        <view class="shop-info">
          <view class="shop-logo">
            <image src="{{shop.logo}}" />
          </view>
          <view class="shop-text">
            <view class="shop-title">{{shop.title}}<text style="display:none"> ({{shop.phone}})</text></view>
            <view class="shop-phone" style="display:none">
              <view class="shop-phone-icon">
                <image src="/images/icon/telephone.png" />
              </view>
              <view class="shop-phone-text">{{shop.phone}}</view>
            </view>
            <view class="shop-address">{{shop.address}}</view>
          </view>
          <view class="shop-icon">
            <image src="/images/icon/enter.png" />
          </view>
        </view>
        <view class="shop-items">
          <block wx:for="{{shop.items}}" wx:key="" wx:for-item="item">
            <view class="shop-item" wx:if="{{index<3}}">
              <view class="shop-item-image">
                <image src="{{item.images[0]}}" mode="aspectFill" />
              </view>
              <!-- <view class="shop-item-title">{{item.title}}</view> -->
              <!-- <view class="shop-item-price">ï¿¥{{item.price}}</view> -->
            </view>
          </block>
        </view>
      </view>
    </block>
  </view>
</view>