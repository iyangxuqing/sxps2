.shops {
  border-top: 0px solid #ddd;
}

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.shop-info {
  display: flex;
  align-items: center;
  border: 1px solid #eee;
  background-color: #eee;
}

.shop-logo, .shop-icon {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
}

.shop-text {
  flex-grow: 1;
  padding: 10rpx;
}

.shop-icon {
  padding: 30rpx;
  margin-right: -20rpx;
}

.shop-title {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.shop-title text {
  font-size: 28rpx;
  color: #666;
}

.shop-address {
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-phone {
  display: flex;
  align-items: center;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
}

.shop-phone-icon {
  width: 34rpx;
  height: 34rpx;
}

.shop-phone-text {
  font-size: 30rpx;
  color: #666;
  margin-left: 6rpx;
}

.shop-items {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.shop-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 210rpx;
  margin-bottom: 20rpx;
}

.shop-item:nth-of-type(3n+2) {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.shop-item-image {
  width: 210rpx;
  height: 210rpx;
  border: 1px solid #eee;
  margin-bottom: 10rpx;
}

.shop-item-title {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 6rpx;
}

.shop-item-price {
  font-size: 28rpx;
  color: red;
}
