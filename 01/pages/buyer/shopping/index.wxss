@import '/template/empty/empty.wxss';

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 130rpx;
}

.gray {
  color: #888;
}

.orders {
  font-size: 30rpx;
  color: #333;
  border-top: 1px solid #ddd;
}

.order {
  display: flex;
  align-items: center;
  height: 160rpx;
  border-bottom: 1px solid #ddd;
}

.order-image {
  width: 140rpx;
  height: 140rpx;
  border: 1px solid #eee;
}

.order-text {
  display: flex;
  flex-direction: column;
  width: 440rpx;
  padding-left: 10rpx;
}

.order-title {
  font-size: 34rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.order-descs {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.order-remark {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.order-number {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  width: 110rpx;
  padding-right: 10rpx;
}

.order-number-price {
  margin-bottom: 10rpx;
}

.shopping-foot {
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 110rpx;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  background-color: #e8e8e8;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.summary {
  flex-grow: 1;
  font-size: 26rpx;
  color: #666;
  margin-right: 20rpx;
}

.summary-num {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 6rpx;
}

.summary-amount {
  display: flex;
  justify-content: flex-end;
}

.summary-value {
  font-weight: 400;
  margin-left: 10rpx;
}

.summary-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  width: 260rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 8rpx;
  background-color: #e64240;
}

.button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 220rpx;
  height: 70rpx;
  color: #fff;
  border-radius: 8rpx;
}

.button-shopping {
  background-color: #393;
}

.button-submit {
  background-color: #e64240;
}

.empty {
  position: absolute;
  top: 40%;
  left: 0;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
}

.empty-line {
  width: 100rpx;
  height: 2rpx;
  background-color: #ccc;
}

.empty-text {
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}
