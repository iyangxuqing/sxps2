page {
  padding-bottom: 100rpx;
  background-color: #f0f0f0;
}

.container {
  position: relative;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.item {
  font-size: 30rpx;
}

.item-images {
  height: 440rpx;
  background-color: #fff;
}

.section {
  padding: 20rpx;
  margin-bottom: 30rpx;
  background-color: #fff;
}

.section.title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 220rpx;
}

.item-title {
  font-size: 40rpx;
  font-weight: 600;
}

.item-descs {
  margin-top: 20rpx;
}

.item-price {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.item-price-value {
  padding-left: 10rpx;
  color: red;
}

.section.amountAndNumber {
  display: flex;
  align-items: center;
  height: 110rpx;
}

.item-amount {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  width: 300rpx;
}

.item-amount-value {
  padding-left: 10rpx;
  color: red;
}

.item-number {
  display: flex;
  align-items: center;
  flex-grow: 1;
  margin-right: -20rpx;
}

.item-number-icon {
  flex-shrink: 0;
  width: 100rpx;
  height: 100rpx;
  padding: 20rpx;
}

.item-number-icon-inner {
  width: 100%;
  height: 100%;
  padding: 14rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
}

.item-number-input {
  display: flex;
  align-items: center;
  text-align: center;
}

.shoppingTag {
  position: absolute;
  top: 500rpx;
  right: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 220rpx;
  height: 80rpx;
  font-weight: 600;
  color: #f33;
  border: 2rpx solid #f33;
}

.section.message {
  height: 240rpx;
}

.message textarea {
  width: 100%;
  height: 100%;
}

.note-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
}

.note-row + .note-row {
  border-top: 1px solid #ddd;
}

.note-remark {
  height: 160rpx;
}

.page-foot {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #f0f0f0;
}

.button {
  flex-basis: 0;
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius: 10rpx;
}

.button:nth-of-type(1) {
  background-color: #e33;
  margin-right: 30rpx;
}

.button:nth-of-type(2) {
  background-color: #292;
  margin-left: 30rpx;
}
