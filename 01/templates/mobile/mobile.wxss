.mobile {
  margin: 0;
}

.mobile-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  border-bottom: 1px solid #ccc;
}

.mobile-code {
  transition: all 300ms ease;
}

.mobile-code.verified {
  height: 0;
  opacity: 0;
}

.mobile-code-request {
  flex-shrink: 0;
  width: 200rpx;
}

.mobile-code-request button {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #666;
}

.mobile-code-verified {
  flex-shrink: 0;
  width: 80rpx;
}

.mobile-code-confirm {
  flex-shrink: 0;
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #4bd4c5;
  border: 1px solid #4bd4c5;
}

.message-error {
  color: red;
}
