.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.products {
  padding-bottom: 130rpx;
  border-top: 1px solid #ddd;
}

.product {
  display: flex;
  align-items: center;
  height: 160rpx;
  border-bottom: 1px solid #ddd;
}

.product .image {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
}

.product .text {
  flex-grow: 1;
  padding-left: 20rpx;
}

.product .title {
  font-size: 32rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}

.product .descs {
  font-size: 22rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 20rpx;
}

.product .price {
  font-size: 30rpx;
}

.product .number {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 280rpx;
  margin-right: -20rpx;
}

.product .minus, .product .plus {
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
  padding: 40rpx;
}

.product .num {
  width: 80rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-align: center;
}

.product .desc {
  font-size: 28rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.summary {
  position: fixed;
  z-index: 9999;
  width: 100%;
  height: 110rpx;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  background-color: #e8e8e8;
  margin-left: -30rpx;
  margin-right: -30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.summary-num, .summary-amount {
  display: flex;
  color: #666;
}

.summary-value {
  font-weight: 400;
  margin-left: 20rpx;
}

.summary-button {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 70rpx;
  width: 260rpx;
  font-size: 34rpx;
  color: #fff;
  border-radius: 8rpx;
  background-color: #e64240;
}

.shopping-empty{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  margin-top: 400rpx;
}

.empty-line{
  width: 100rpx;
  height: 1px;
  background-color: #ccc;
}

.empty-text{
  font-size: 30rpx;
  color: #888;
  padding: 20rpx;
}