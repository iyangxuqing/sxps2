.swiper-images-editor {
  height: 100%;
}

.swiper-images-editor swiper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.swiper-image-del {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -10rpx;
  right: -10rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.4);
  background-clip: content-box;
}

.swiper-image-add {
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper-image-add image{
  width: 140rpx;
  height: 140rpx;
}