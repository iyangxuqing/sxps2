.userInfo {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 30rpx;
}

.userInfo button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  background-color: transparent;
}

.userInfo button::after {
  display: none;
}

.userInfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  overflow: hidden;
  border: 1px solid #ddd;
}

.userInfo-nickName {
  position: absolute;
  top: 70%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #333;
}