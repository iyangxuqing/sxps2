.mobile {
  margin-bottom: 0;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 120rpx;
  font-size: 34rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 1px;
}

.row-icon {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
}

.row-label {
  flex-shrink: 0;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.row-value {
  flex-grow: 1;
  margin-left: 20rpx;
}

.mobile-code-request {
  flex-shrink: 0;
  width: 200rpx;
}

.mobile-code-request button {
  width: 100%;
  height: 80rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #666;
}

.mobile-code-confirm {
  flex-shrink: 0;
  width: 200rpx;
  height: 80rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #1aad19;
  border: 1px solid #1aad19;
}

.message-error {
  color: red;
}

.row-mobile-code {
  transition: all 300ms ease;
}

.row-mobile-code.slideUp {
  height: 0;
  min-height: 0;
  opacity: 0;
}
